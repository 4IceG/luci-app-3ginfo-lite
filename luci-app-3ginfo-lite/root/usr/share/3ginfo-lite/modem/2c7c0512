			T=$(echo "$LINE" | awk -F[,:] '/^\+QENG:/ {print $10}' | xargs)
			if [ -n "$T" ]; then
				case $T in
					0*) T1="1.4";;
					1*) T1="3";;
					2*) T1="5";;
