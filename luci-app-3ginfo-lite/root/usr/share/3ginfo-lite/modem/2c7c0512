#			if [ -n "$T" ]; then
#			RSRQ=$T
#			fi
			T=$(echo "$LINE" | awk -F[,:] '/^\+QENG:/ {print $16}' | xargs)
			if [ -n "$T" ]; then
				SINR=$T
			fi
#			T=$(echo "$LINE" | awk -F[,:] '/^\+QENG:/ {print $7}' | xargs)
#			if [ -n "$T" ]; then
#			PCI=$T
#			fi
#			T=$(echo "$LINE" | awk -F[,:] '/^\+QENG:/ {print $8}' | xargs)
#			if [ -n "$T" ]; then
